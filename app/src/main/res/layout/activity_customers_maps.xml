<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/relay3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".LocationMapsActivity"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"

            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/location1"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/map"
            android:layout_marginTop="-76dp"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"

            android:text="Latitude and Longitude 1" />
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:id="@+id/location2"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location1"
            android:textColor="@android:color/background_light"
            android:text="Latitude and Longitude 2"
            android:textAlignment="center"
            />
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            android:id="@+id/location3"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/location2"
            android:textColor="@android:color/background_light"
            android:text="Latitude and Longitude 3"
            android:textAlignment="center"
            />

    </RelativeLayout>






</RelativeLayout>